{
  "compilerOptions": {
    // File Layout
    "rootDir": ".", // Include both src/ and config/ at project root
    "outDir": "./dist", // Output compiled .js files to dist/
    
    // Environment Settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node", 
    "target": "es2020", // Compatible with modern Node.js
    "lib": ["es2020"], // Include ES2020 features
    "types": ["node"], // Include Node.js types
    
    // Other Outputs
    "sourceMap": true, // Generate source maps for debugging
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate .d.ts.map files
    
    // Stricter Typechecking Options
    "strict": true, // Enable all strict checks
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // Recommended Options
    "jsx": "react-jsx", // Keep if using React, remove if not needed
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // Ensure compilation
    "noEmit": false // Generate .js files
  },
  "include": ["src/**/*", "config/**/*", "testUser.ts", "index.ts"], // Include src/, config/, and testUser.ts
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist/
}